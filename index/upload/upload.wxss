/* index/upload/upload.wxss */
.upload-cotainer {
  padding: 0 40rpx;
}

/* 文章标题 */
.title-common {
  padding: 30rpx 0;
}

.title-top-common {
  font-size: 40rpx;
  color: #333;
  line-height: 40rpx;
  padding-bottom: 30rpx;
}

.title-bottom-common {
  height: 70rpx;
}

.title-bottom-common input {
  border: 1px solid #ddd;
  padding: 4rpx 10rpx;
  display: inline-block;
  height: 70rpx;
  width: 600rpx;
  border-radius: 8rpx;
  color: #444;
}


/* 文章内容 */
.content {
  /* padding-bottom: 30rpx; */
}

.content-bottom {
  height: 300rpx;
}

.content-bottom textarea {
  display: inline-block;
  width: 600rpx;
  height: 300rpx;
  border: 1px solid #ddd;
  padding: 8rpx 10rpx;
  color: #444;
}

/* 上传图片 */
