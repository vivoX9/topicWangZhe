.image-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}


.image-box>image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  vertical-align: bottom;
  margin-right: 20rpx;
  margin-right: 30rpx;
}

.upload-box {
  width: 200rpx;
  height: 200rpx;
  background: #eee;
  justify-content: center;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.upload-box image {
  width: 60rpx;
  height: 60rpx;
}

.publish {
  width: calc(100% - 80rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 999rpx;
  background: #f44;
  color: #fff;
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
}