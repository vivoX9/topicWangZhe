/**index.wxss**/
.index {
  padding-bottom: 140rpx;
}

.navibar {
  width: 100vw;
}

.banner {
  margin: 0 30rpx;
  margin-top: 20rpx;
}

.banner-image {
  width: 100%;
  height: 400rpx;
  vertical-align: bottom;
  border-radius: 4px;
}

.main {
  padding: 0 30rpx;
  padding-top: 40rpx;
}

.main-title {
  font-size: 20px;
  font-weight: bold;
  padding: 16rpx 0;
}

.upload {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 160rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #888;
  z-index: 20;
}

.upload image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: bottom;
  z-index: 100;
}