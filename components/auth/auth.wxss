/* components/auth/auth.wxss */
.auth {
  position: fixed;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  z-index: 190;
  background: #fff;
  border-radius: 8rpx;
}

.auth-cover {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 80;
  background: rgba(0, 0, 0, 0.5);
}

.main {
  position: relative;
  width: 600rpx;
  padding-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  color: #222;
  font-weight: 600;
  padding: 40rpx 0;
  text-align: center;
}

.desc {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  padding: 30rpx 0;
  text-align: center;
}

.button {
  margin: 0 auto;
  position: relative;
  width: 300rpx;
  height: 80rpx;
}

.button-wx {
  width: 300rpx;
  height: 80rpx;
  border-radius: 999rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background: #CC0000;
}

.button-box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 200;
}

.close {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -80rpx;
  width: 64rpx;
  height: 64rpx;
}

.close image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: bottom;
}